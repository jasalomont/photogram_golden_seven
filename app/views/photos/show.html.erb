<body style="margin-left:5em">
  <div>
    <h1>Photo <%= @photo.id %></h1>
    <h2><%= @photo.caption %></h2>
    <img src="<%= @photo.source %>" >
  </div>
  <p>
    Time Stamp: <%= @photo.created_at %>
    </p>
    <p>
    Uploaded <%= time_ago_in_words(@photo.created_at) %> ago
  </p>
  <div>
    <a href="http://localhost:3000/photos/">Back</a>
    <a href="http://localhost:3000/photos/<%= @photo.id %>/edit">Edit</a>
    <a href="http://localhost:3000/delete_photos<%= @photo.id %>">Delete</a>
  </div>
</body>
